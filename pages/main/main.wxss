.container {
  width: 100%;
  overflow: hidden;
  padding: 20rpx 20rpx;
  margin: 0 auto;
}

.touch-content{
  width:100%;
  margin:0 auto;
}

.touch-item {
  font-size: 14px;
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #ccc;
  width: 100%;
  overflow: hidden;
  background: white;

 
}

.touch-item:last-child{
  border-bottom: none;
}

.title {
  font-size: 24rpx;
  color: #a1a1a1;
  line-height: 40px;
  margin-right: 0;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(80px);
  transform: translateX(80px);
  margin-left: -60px;
  width: 80px;
}

.content {
  font-size: 28rpx;
  color:#333;
  width: 50%;
  padding: 10px;
  line-height: 22px;
  margin-right: 0;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  margin-left: -10px;
}

.content-info{
  font-size: 11pt;
  color:#888;
  width: auto;
  line-height: 22px;
}

.infoShow{
  font-size: 24rpx;
  color: #a1a1a1;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  padding-top:6pt;

}

.img{
  width: 6pt;
  height: 12pt;
  position:relative;
top:2pt;
left:2pt;

}

.noNeed{
  margin-left:-106rpx !important;
}



.info {
  background-color: orangered;
  width: 90px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}

.touch-move-active .content, .touch-move-active .info, .touch-move-active .title, .touch-move-active .infoShow {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}

