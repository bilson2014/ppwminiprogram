.pageTitle{

height: 108rpx;
line-height: 108rpx;
font-size:36rpx;
padding-left: 30rpx;

}

.titleItem{
  overflow:hidden;
  margin-bottom:20rpx;

}

.titleTop{
  width: 100%;
  height:88rpx;
  background: white;
  position: relative;
}

.title{
  font-size: 30rpx;
  position:absolute;
  top:24rpx;
  left:120rpx;
}

.logo{

width:26rpx;
height:26rpx;
position:absolute;
top:28rpx;
left:40rpx;

}


.open{
width: 20rpx;
height: 20rpx;
position: absolute;
right:20rpx;
top:40rpx;

}

.openOn{
transform:rotate(-90deg);
-webkit-transform:rotate(-90deg); /* Safari 和 Chrome */
}
.openOff{
transform:rotate(90deg);
-webkit-transform:rotate(90deg); /* Safari 和 Chrome */
}

.titleContent{
  width:auto;
  height: 100rpx;
  transition: all .5s;
  -webkit-transition: all .5s; /* Safari 和 Chrome */
  white-space: nowrap;
  
}

.onContent{
height: 300rpx;
padding: 12rpx 0pt 0pt 16rpx;
}

.offContent{
height: 0rpx;


}

